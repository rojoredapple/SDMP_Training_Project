<%= form_for @event do |form| %>

  <%= render "error_messages" %>

  <div class = "field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class = "field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class = "field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>

  <div class = "actions">
    <%= form.submit %>
  </div>
<% end %>
